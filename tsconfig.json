{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2021",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "lib": [
      "es2021"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "pretty": true,
    "strict": true,
    "removeComments": true
  },
  "exclude": [
    "lib"
  ],
  "include": [
    "src/**/*",
    "types/**/*",
    "src/.ts",
    "src/host/.ts"
  ]
}